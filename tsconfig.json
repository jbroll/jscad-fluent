{
  "include": ["src", "types"],
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "examples",
    "node_modules"
  ]
}
