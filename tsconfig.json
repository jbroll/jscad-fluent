{
  "include": ["src", "types"],
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "skipLibCheck": true,

    // Strict type checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "exclude": [
    "dist",
    "examples",
    "node_modules",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
